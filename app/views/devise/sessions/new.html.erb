<h1 class="mb-4 text-center">Entrar</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-3 position-relative">
    <%= f.label :email, "E-mail", class: "form-label fw-bold" %>
    <%= f.email_field :email, autofocus: true, class: "form-control #{'is-invalid' if resource.errors[:email].any?}", placeholder: "Seu e-mail", data: { bs_toggle: "tooltip", bs_placement: "right", bs_title: resource.errors[:email].join(', ') } %>
  </div>

  <div class="mb-3 position-relative">
    <%= f.label :password, "Senha", class: "form-label fw-bold" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control #{'is-invalid' if resource.errors[:password].any?}", placeholder: "Sua senha", data: { bs_toggle: "tooltip", bs_placement: "right", bs_title: resource.errors[:password].join(', ') } %>
  </div>

  <div class="mb-3 form-check">
    <%= f.check_box :remember_me, class: "form-check-input" %>
    <%= f.label :remember_me, "Lembrar-me", class: "form-check-label" %>
  </div>

  <div class="d-grid gap-2">
    <%= f.submit "Entrar", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

<div class="mt-3 text-center">
  <%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %><br>
  <%= link_to "Cadastrar-se", new_registration_path(resource_name) %>
</div>
