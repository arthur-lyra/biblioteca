<!-- filepath: app/views/devise/registrations/new.html.erb -->
<h1 class="mb-4 text-center">Cadastrar Usuário</h1>

<%# Exibe erros gerais do resource %>
<% if resource.errors.any? %>
  <div class="alert alert-danger">
    <ul class="mb-0">
      <% resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="mb-3">
    <%= f.label :name, "Nome", class: "form-label fw-bold" %>
    <%= f.text_field :name, autofocus: true, 
          class: "form-control #{'is-invalid' if resource.errors[:name].any?}", 
          placeholder: "Seu nome" %>
    <% resource.errors[:name].each do |error| %>
      <div class="invalid-feedback d-block"><%= error %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :email, "E-mail", class: "form-label fw-bold" %>
    <%= f.email_field :email, 
          class: "form-control #{'is-invalid' if resource.errors[:email].any?}", 
          placeholder: "Seu e-mail" %>
    <% resource.errors[:email].each do |error| %>
      <div class="invalid-feedback d-block"><%= error %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password, "Senha", class: "form-label fw-bold" %>
    <%= f.password_field :password, autocomplete: "new-password", 
          class: "form-control #{'is-invalid' if resource.errors[:password].any?}", 
          placeholder: "Mínimo 6 caracteres" %>
    <% resource.errors[:password].each do |error| %>
      <div class="invalid-feedback d-block"><%= error %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "Confirme a senha", class: "form-label fw-bold" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", 
          class: "form-control #{'is-invalid' if resource.errors[:password_confirmation].any?}", 
          placeholder: "Repita a senha" %>
    <% resource.errors[:password_confirmation].each do |error| %>
      <div class="invalid-feedback d-block"><%= error %></div>
    <% end %>
  </div>

  <div class="d-grid gap-2">
    <%= f.submit "Cadastrar", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

<div class="mt-3 text-center">
  <%= link_to "Já tem conta? Entrar", new_session_path(resource_name), class: "text-decoration-none" %>
</div>
